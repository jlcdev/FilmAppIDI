<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/list_item_show_films_cardview"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        app:cardElevation="3dp"
        app:cardBackgroundColor="@android:color/background_light">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="Títol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/show_films_field_title"
                android:textStyle="normal|bold"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="14dp"
                android:layout_marginTop="5dp"
                android:textSize="18sp" />

            <TextView
                android:text="Director: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:layout_below="@+id/show_films_field_title"
                android:layout_alignLeft="@+id/show_films_field_title"
                android:layout_alignStart="@+id/show_films_field_title" />

            <TextView
                android:text="Actor: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView2"
                android:layout_alignLeft="@+id/textView2"
                android:layout_alignStart="@+id/textView2"
                android:id="@+id/textView3" />

            <TextView
                android:text="Actor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/show_films_field_actor"
                android:layout_below="@+id/textView2"
                android:layout_toRightOf="@+id/textView3"
                android:layout_toEndOf="@+id/textView3" />

            <TextView
                android:text="Païs: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView3"
                android:layout_alignLeft="@+id/textView3"
                android:layout_alignStart="@+id/textView3"
                android:id="@+id/textView5"
                android:layout_marginBottom="5dp" />

            <TextView
                android:text="País"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/show_films_field_country"
                android:layout_below="@+id/textView3"
                android:layout_toRightOf="@+id/textView5"
                android:layout_toEndOf="@+id/textView5" />

            <TextView
                android:text="Director"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/show_films_field_director"
                android:layout_alignBaseline="@+id/textView2"
                android:layout_alignBottom="@+id/textView2"
                android:layout_toRightOf="@+id/textView2"
                android:layout_toEndOf="@+id/textView2" />

            <TextView
                android:text="XX"
                android:layout_height="wrap_content"
                android:id="@+id/show_films_field_rate"
                android:textAlignment="center"
                android:textSize="30sp"
                android:textColor="#FFFFFF"
                android:background="#000000"
                android:padding="19dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="7dp"
                android:layout_marginRight="10dp"
                android:layout_width="80dp" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>
