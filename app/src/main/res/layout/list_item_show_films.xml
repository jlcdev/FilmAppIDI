<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="0.98">

    <TextView
        android:text="Títol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/show_films_field_title"
        android:textStyle="normal|bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="13dp"
        android:textSize="18sp" />

    <TextView
        android:text="Director: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_below="@+id/show_films_field_title"
        android:layout_alignLeft="@+id/show_films_field_title"
        android:layout_alignStart="@+id/show_films_field_title" />

    <TextView
        android:text="Actor: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:id="@+id/textView3" />

    <TextView
        android:text="Actor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/show_films_field_actor"
        android:layout_below="@+id/textView2"
        android:layout_toRightOf="@+id/textView3"
        android:layout_toEndOf="@+id/textView3" />

    <TextView
        android:text="Païs: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:id="@+id/textView5" />

    <TextView
        android:text="País"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/show_films_field_country"
        android:layout_below="@+id/textView3"
        android:layout_toRightOf="@+id/textView5"
        android:layout_toEndOf="@+id/textView5" />

    <TextView
        android:text="XX"
        android:layout_height="wrap_content"
        android:id="@+id/show_films_field_rate"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textColor="#FFFFFF"
        android:background="#000000"
        android:layout_alignTop="@+id/show_films_field_title"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="14dp"
        android:layout_marginEnd="16dp"
        android:padding="15dp"
        android:layout_marginBottom="13dp"
        android:layout_width="70dp" />

    <TextView
        android:text="Director"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/show_films_field_director"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_toRightOf="@+id/textView2"
        android:layout_toEndOf="@+id/textView2" />
</RelativeLayout>
